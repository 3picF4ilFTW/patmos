<patmos>
  <description>Configuration for the ML605 board</description>

  <frequency Hz="100000000" />
  <pipeline dual="true" />
  <bus burstLength="4" writeCombine="false" />

  <MCache size="4k" blocks="16" repl="" />
  <DCache size="2k" assoc="1" repl="" />
  <ISPM size="8k" />
  <DSPM size="2k" />
  <BootSPM size="2k" />

  <!-- DevTypeRef /should/ be ignored, but it's kept for 100% compatibility -->
  <ExtMem size="2M" DevTypeRef="Ssram32" />

  <IOs>
	<IO IODevTypeRef="CpuInfo" offset="0"/>
	<IO IODevTypeRef="Timer" offset="2"/>
	<IO IODevTypeRef="Uart" offset="8"/>
	<IO IODevTypeRef="Leds" offset="9"/>
  </IOs>

  <Devs>
	<Dev IODevType="CpuInfo" entity="CpuInfo" iface="OcpCore" />
	<Dev IODevType="Timer" entity="Timer" iface="OcpCore" />
	<Dev IODevType="Uart" entity="Uart" iface="OcpCore">
	  <params>
		<param name="baud_rate" value="115200"/>
	  </params>
	</Dev>
	<Dev IODevType="Leds" entity="Leds" iface="OcpCore">
	  <params>
		<param name="ledCount" value="9"/>
	  </params>
	</Dev>
  </Devs>

  <!-- currently unused -->
  <SCache size="0" />
</patmos>
